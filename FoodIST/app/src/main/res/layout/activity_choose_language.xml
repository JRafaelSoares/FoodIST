<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChooseLanguageActivity">

    <Button
        android:id="@+id/portuguese"
        android:layout_width="149dp"
        android:layout_height="86dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="152dp"
        android:text="@string/choose_language_portuguese"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/english" />

    <Button
        android:id="@+id/english"
        android:layout_width="149dp"
        android:layout_height="86dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="108dp"
        android:text="@string/choose_language_english"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>