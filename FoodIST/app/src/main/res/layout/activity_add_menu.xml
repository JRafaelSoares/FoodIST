<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddMenuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dishName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="20sp"
            android:maxLength="60"
            android:hint="@string/add_menu_dish_name" />

        <EditText
            android:id="@+id/dishCost"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/add_menu_cost"
            android:textSize="20sp"
            android:text=""
            android:inputType="numberDecimal"
            android:maxLength="5" />

        <ImageView
            android:id="@+id/dishView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:padding="30dp"
            android:src="@drawable/ic_add" />


        <TextView
            android:id="@+id/FoodTypeText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:maxLength="60"
            android:text="@string/add_menu_food_type"
            android:textAlignment="center"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/FoodTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">


            <RadioButton
                android:id="@+id/add_menu_vegetarian"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/add_menu_type_vegetarian"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/add_menu_meat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/add_menu_type_meat"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/add_menu_vegan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/add_menu_type_vegan"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/add_menu_fish"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/add_menu_type_fish"
                android:textSize="20sp" />
        </RadioGroup>


        <Button
            android:id="@+id/add_new_menu_done_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/add_menu_done" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>