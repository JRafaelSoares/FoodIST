<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dishName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:hint="@string/add_menu_dish_name"
            android:maxLength="60"
            android:text=""
            android:textSize="30sp" />

        <EditText
            android:id="@+id/dishCost"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:hint="@string/add_menu_cost"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:text=""
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/dishView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:padding="30dp"
            android:src="@drawable/ic_add" />

        <Button
            android:id="@+id/add_new_menu_done_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="@string/add_menu_done" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>